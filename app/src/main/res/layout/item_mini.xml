<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:clickable="true">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/mini_item_bg"/>


    <TableLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="180dp"
        android:layout_height="220dp">

        <TableRow>
            <ImageView
                android:id="@+id/mini_item_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/mini_item_name"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:text="Samsung Gear top lvl omg gg htfgfrgrgr"
                android:textSize="16dp"
                android:maxLength="32"
                android:layout_weight="1"
                style="@style/regular_text"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/mini_item_price"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="10.000â‚½"
                android:textSize="15dp"
                android:maxLength="15"
                android:gravity="center"
                android:layout_weight="1"
                style="@style/mini_text"/>
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/fire"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:src="@drawable/ic_fire"
        android:visibility="invisible"/>

</FrameLayout>