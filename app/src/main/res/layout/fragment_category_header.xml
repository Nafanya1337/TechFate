<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.category.CategoryHeaderFragment">

    <ImageView
        android:id="@+id/category_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:foreground="@drawable/shadow"
        android:scaleType="centerCrop"
        android:src="@drawable/category_headphones_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_name"
        style="@style/tittle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="96dp"
        android:text="Наушнки"
        app:layout_constraintBottom_toBottomOf="@+id/category_background"
        app:layout_constraintEnd_toEndOf="@+id/category_background"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/category_background"
        app:layout_constraintTop_toTopOf="@+id/category_background"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/category_back_button"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/category_options"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_options"
        app:layout_constraintBottom_toBottomOf="@+id/category_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/category_back_button" />
</androidx.constraintlayout.widget.ConstraintLayout>