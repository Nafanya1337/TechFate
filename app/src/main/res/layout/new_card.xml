<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/saved_card_bg">

    <TextView
        android:id="@+id/new_card_num"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:fontFamily="@font/dmsans_medium"
        android:gravity="center_horizontal"
        android:lines="1"
        android:maxLength="19"
        android:text="1234 5678 1234 5678"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_card_data"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/dmsans_medium"
        android:lines="1"
        android:maxWidth="55dp"
        android:text="00/00"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/new_card_holder"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/dmsans_regular"
        android:lines="1"
        android:text="Иванов И.И."
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/new_card_img"
        android:layout_width="56dp"
        android:layout_height="16dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/card_mir"
        app:layout_constraintEnd_toEndOf="@+id/new_card_data"
        app:layout_constraintStart_toStartOf="@+id/new_card_data"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>