<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="regular_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>

    </style>

    <style name="mini_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tittle_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/tittle_text_size</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="hint_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/hint_text_size</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">@dimen/alpha_hint_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="hint_text_item_cart" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">@dimen/alpha_hint_text</item>
    </style>

    <style name="miniRatingBAR" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_product_mini_rating_bar</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="accountPageTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:windowBackground">@color/yellow</item>

    </style>

    <style name="DefaultStatusBarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

    </style>
</resources>