<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.shmakov.techfate.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_homeFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.shmakov.techfate.fragments.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.shmakov.techfate.fragments.cart.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_accountFragment_to_makeOrderFragment2"
            app:destination="@id/makeOrderFragment2"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@android:anim/fade_out"
            app:popExitAnim="@anim/slide_down" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.shmakov.techfate.fragments.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/makeOrderFragment2"
        android:name="com.shmakov.techfate.fragments.cart.MakeOrderFragment"
        android:label="fragment_make_order"
        tools:layout="@layout/fragment_make_order" >
        <argument
            android:name="Address"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="0" />
        <argument
            android:name="DeliveryMethod"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="0" />
        <argument
            android:name="PaymentMethod"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="0" />
        <argument
            android:name="Card"
            app:argType="com.shmakov.techfate.entities.Card"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="IsAlreadyMade"
            app:argType="boolean"
            android:defaultValue="true" />
        <argument
            android:name="Cart"
            app:argType="com.shmakov.techfate.entities.Cart"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="DeliveryCost"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="Status"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="0" />
    </fragment>
</navigation>